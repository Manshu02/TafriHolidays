@model Phase4.Models.Payments

<!-- Payment Confirmation Card -->
<div class="payment-card">
    <h3>Confirm!</h3>
    <p class="amount-text">Amount to Pay: ₹@Model.AdminPrice</p>

    <form action="/User/PaymentSuccess" method="POST">
        <!-- Razorpay Checkout Script -->
        <script src="https://checkout.razorpay.com/v1/checkout.js"
                data-key="@ViewBag.RazorpayKey"
                data-amount="@(@Model.AdminPrice * 100)"
                data-currency="INR"
                data-order_id="@ViewBag.RazorpayOrderId"
                data-buttontext="Pay Now"
                data-name="Tafri Holidays"
                data-description="Purchase Package"
                data-theme.color="#F37254">
        </script>

        <!-- Hidden fields to pass data to PaymentSuccess action -->
        <input type="hidden" name="packageId" value="@Model.packageId" />
        <input type="hidden" name="count" value="@Model.count" />
        <input type="hidden" name="packagePrice" value="@Model.packagePrice" />
        <input type="hidden" name="AdminPrice" value="@Model.AdminPrice" />

        <!-- Pay Now Button (in Razorpay script) -->
    </form>

    <!-- Cancel Button -->
    <a href="/User/ListPackages" class="btn-cancel">Cancel</a>
</div>

<!-- Add CSS for styling -->
<style>
    .payment-card {
        border: 1px solid #ddd;
        border-radius: 8px;
        padding: 20px;
        max-width: 400px;
        margin: 20px auto;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        text-align: center;
        background-color: #fff;
    }

        .payment-card h3 {
            margin-bottom: 15px;
            color: #333;
        }

    .amount-text {
        font-size: 1.5rem;
        margin-bottom: 20px;
        color: #F37254; /* Highlight color for amount */
    }

    .btn-pay-now {
        background-color: #007bff;
        border: none;
        color: white;
        padding: 10px 20px;
        font-size: 1.2rem;
        border-radius: 5px;
        cursor: pointer;
        transition: background-color 0.3s;
    }

        .btn-pay-now:hover {
            background-color: #0056b3;
        }

    .btn-cancel {
        display: inline-block;
        background-color: #ff6347; /* Different color for cancel button */
        border: none;
        color: white;
        padding: 8px 16px; /* Smaller size */
        font-size: 1rem;
        border-radius: 5px;
        cursor: pointer;
        text-decoration: none;
        transition: background-color 0.3s;
        margin-top: 15px;
    }

        .btn-cancel:hover {
            background-color: #e55347; /* Darker shade on hover */
        }
</style>
