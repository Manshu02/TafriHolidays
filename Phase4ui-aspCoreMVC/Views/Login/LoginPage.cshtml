@model Phase4.Models.Login

@{
    ViewData["Title"] = "Login";
}

<h2 class="text-center mt-4">@ViewData["Title"]</h2>

<div class="d-flex justify-content-center">
    <form asp-action="LoginProcess" method="post" class="w-50 p-4 border rounded bg-light">
        <div class="form-group">
            <label asp-for="Email" class="font-weight-bold"></label>
            <input asp-for="Email" class="form-control" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Password" class="font-weight-bold"></label>
            <input asp-for="Password" type="password" class="form-control" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>

        <div class="d-flex justify-content-between">
            <button type="submit" class="btn btn-primary">Login</button>
        </div>
    </form>
</div>

<div class="d-flex justify-content-end mt-3">
    <a href="~/Home/Index" class="btn btn-secondary">New User? Register</a>
</div>

<style>
    body {
        background-color: #f1f1f1;
        font-family: Arial, sans-serif;
    }

    .form-group {
        margin-bottom: 20px;
    }

    .btn-primary {
        background-color: #0056b3;
        border-color: #0056b3;
    }

    .btn-secondary {
        background-color: #28a745;
        border-color: #28a745;
    }

        .btn-primary:hover, .btn-secondary:hover {
            opacity: 0.9;
        }

    h2 {
        color: #343a40;
        font-size: 28px;
        font-weight: bold;
    }

    .bg-light {
        background-color: #ffffff !important;
        box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
    }

    .d-flex.justify-content-end {
        position: absolute;
        bottom: 20px;
        right: 20px;
    }

    .btn-secondary {
        padding: 10px 20px;
        font-size: 16px;
    }
</style>
